@model System.Collections.Generic.Dictionary<int,WebApp.Models.ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary"asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>
<h4 class="mb-3">Lista Kontaktów</h4>
<table class="table">
    <thead>
    <tr>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Operacje
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var entry in @Model)
    {
        <tr>
            <td>
                @entry.Value.First_name
            </td>
            <td>
                @entry.Value.Last_name
            </td>
            <td>
                <a class="btn btn-success">Edycja</a>
                <a class="btn btn-info" asp-action="Details" asp-controller="Contact" asp-route-id=@entry.Key>Szczegóły</a>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Contact" asp-route-id=@entry.Key>Usuń</a>
            </td>



        </tr>
    }
    </tbody>
</table>